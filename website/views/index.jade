extends layout

block content
  h1= title
  p The song for #{song.date} is #{song.title} by #{song.artist}
  p #{song.comments}
  a(href=song.weblink) Listen to it here
  = "\n"
  p
  if registered
      h2 Place your vote
      div
        form(action="/vote", method="post")
          input(type="radio", name="vote", value=4, checked=false)
          | Great Song!
          p
          input(type="radio", name="vote", value=3, checked=false)
          | Decent Song
          p
          input(type="radio", name="vote", value=2, checked=false)
          | This Sucks
          p
          input(type="submit", value="Vote")
  else if loggedIn
    p You aren't registered with Song of the Day
    p Please click here to register if you would like to vote
    div
      form(action="/register", method="post")
        input(type="submit", value="Register")
  else
    a(href=loginlink) Click here to login via Facebook if you would like to vote
